<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_heightPercent="@string/wheel_rcv_heightPercent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_widthPercent="@string/wheel_rcv_singleWidthPercent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_widthPercent="@string/wheel_rcv_singleWidthPercent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_three"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_widthPercent="@string/wheel_rcv_singleWidthPercent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_four"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_widthPercent="@string/wheel_rcv_singleWidthPercent" />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>
